{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python 调试程序: Flask (局域网访问)", // 我给名字加了后缀，方便您识别
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0" // <-- 新增此行，用于局域网访问
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}